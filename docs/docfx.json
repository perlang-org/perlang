{
    "$schema": "https://json.schemastore.org/docfx",

    "metadata": [
        {
            "src": [
                {
                    "files": [
                        "**/*.csproj"
                    ],
                    "src": "../"
                }
            ],
            "dest": "api",
            "filter": "filter-config.yml",

            // We need the default filter to be able to filter out EditorBrowsableState.Never-flagged types. I tried
            // copying this rule to filter-config.yml with no success.
            "disableDefaultFilter": false
        }
    ],

    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },

            {
                "files": [
                    "*.md",
                    "toc.yml",
                    "**/*.md",
                    "**/toc.yml"
                ]
            }
        ],

        "resource": [
            {
                "files": [
                    "casts/**",
                    "images/**",
                    "js/**",
                    "styles/**"
                ]
            }
        ],

        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],

        "dest": "../_site",
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],

        "globalMetadata": {
            "_appFooter": "Â© Copyright 2020 The Perlang Authors",
            "_gitContribute": {
                "branch": "master"
              }
        },

        // Our custom template changes are in docs/templates/override
        "template": [
            "default",
            "templates/override",
            "templates/darkerfx"
        ],

        "postProcessors": [],
        "markdownEngineName": "dfm",
        "noLangKeyword": false
    }
}
