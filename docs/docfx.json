{
    "$schema": "https://json.schemastore.org/docfx",

    "metadata": [
        {
            "src": [
                {
                    "files": [
                        "**/*.csproj"
                    ],
                    "src": "../"
                }
            ],
            "dest": "api",
            "filter": "filter-config.yml",
            "disableGitFeatures": false,
            "disableDefaultFilter": false
        }
    ],

    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },

            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "**/*.md",
                    "toc.yml",
                    "*.md"
                ]
            }
        ],

        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],

        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],

        "dest": "../_site",
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],

        // Our custom template changes are in docs/template
        "template": [
            "default",
            "template"
        ],

        "postProcessors": [],
        "markdownEngineName": "markdig",
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false,
        "disableGitFeatures": false
    }
}
